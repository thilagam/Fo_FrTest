						if(minutes!="0")
							message += minutes + "mn"; 

						$("#submittimer_"+qid[1]).html(message);
						if(days==0 && hours==0 && minutes==0 && seconds==0)
							$("#submittimer_"+qid[1]).html("Termin&eacute;");
						
					}
				});
		});
	}	
